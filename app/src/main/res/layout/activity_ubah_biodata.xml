<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Menu.UbahBiodata">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/gradStop">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/ic_arrow_back_black_32dp"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@string/font_medium"
            android:paddingLeft="6dp"
            android:text="Biodata Diri"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                app:cardBackgroundColor="@color/gradStop"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardMaxElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/head_konsulSaya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@string/font_medium"
                        android:text="Biodata Diri Anda"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="25sp" />

                    <LinearLayout
                        android:id="@+id/main_konsulSaya"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/head_konsulSaya"
                        android:orientation="vertical">


                        <android.support.v7.widget.CardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"

                            android:shape="ring"
                            android:background="#ffffff"
                            android:layout_gravity="center"
                            app:cardCornerRadius="20dp"
                            >
                            <ImageView
                                android:id="@+id/avatar"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/menu_icon_user"/>
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Nama                   :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/bioName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" Muhamad Ady Pamungkas"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="NIK                       :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/bioNik"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@string/font_medium"
                                android:text=" 1234567890"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Jenis Kelamin     :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/bioJk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" Laki-laki"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Tanggal Lahir      :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/bioTTL"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" 29 Februari 1998"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>





                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="No SIPP               :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <TextView
                                android:id="@+id/bioNoSipp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" 123"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Alamat                 : "
                                android:textColor="@color/white"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/bioAlamat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Jalan \nYos Sudarso\nNomor 53\nKabupaten\nMagelang\nProvinsi Jawa Tengah\nIndonesia"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Nomor Hp            :"
                                android:textColor="@color/white"
                                android:textSize="16sp" />       android:textSize="16sp" />
                            <TextView
                                android:id="@+id/bioNohp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text=" 3"
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@string/font_medium"
                                android:text="Keahlian       :  "
                                android:textColor="@color/white"
                                android:textSize="16sp" />
                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/recyclerViewlayanan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                ></android.support.v7.widget.RecyclerView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_below="@+id/main_konsulSaya"
                        android:layout_marginBottom="20dp"
                        android:paddingVertical="10dp">

                        <Button
                            android:id="@+id/bt_daftarSaya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/btn_bg"
                            android:gravity="center"
                            android:paddingBottom="5dp"
                            android:layout_gravity="center"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:paddingTop="5dp"
                            android:text="Ubah Biodata"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>